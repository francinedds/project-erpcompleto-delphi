{$R *.dfm}

procedure TViewPrincipal.btnSairClick(Sender: TObject);
begin
  inherited;
  Self.Close;
end;

procedure TViewPrincipal.FormKeyDown(Sender: TObject; var Key: Word;
  Shift: TShiftState);
begin
  inherited;
    if (Key = VK_ESCAPE) then
    Self.Close;
end;

end.
